@page
@model SmartHomeApp.Pages.DeviceDashboardModel
@{
    ViewData["Title"] = "Apparaat toevoegen";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Nieuw apparaat toevoegen</h2>

    @* Succesbericht tonen *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @* Validatiefouten tonen *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form method="post" asp-page-handler="Add" class="p-4 border rounded shadow-sm" style="max-width: 500px; margin: auto;">
        <div class="form-group mb-3">
            <label asp-for="newdevice.DeviceCode" class="form-label">Apparaatcode</label>
            <input asp-for="newdevice.DeviceCode" class="form-control" placeholder="Bijv. ABC123" />
            <span asp-validation-for="newdevice.DeviceCode" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="newdevice.DeviceName" class="form-label">Naam apparaat</label>
            <input asp-for="newdevice.DeviceName" class="form-control" placeholder="Bijv. Lamp woonkamer" />
            <span asp-validation-for="newdevice.DeviceName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Toevoegen</button>
    </form>

    <div class="mt-5">
        <h4 class="text-center mb-3">Toegevoegde apparaten</h4>

        @if (Model.Alldevices != null && Model.Alldevices.Any())
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Naam apparaat</th>
                        <th style="width: 150px;">Actie</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var device in Model.Alldevices)
                    {
                        <tr>
                            <td>@device.DeviceName</td>
                            <td>
                                <form method="post" asp-page-handler="Remove">
                                    <input type="hidden" name="deviceid" value="@device.DeviceId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Verwijderen</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center text-muted">Er zijn nog geen apparaten toegevoegd.</p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
