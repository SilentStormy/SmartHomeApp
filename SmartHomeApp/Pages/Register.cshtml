@page
@model SmartHomeApp.Pages.RegisterModel
@{
    ViewData["Title"] = "Registreer";
}

<div class="container mt-4">
 
    <h1 class="text-center mb-4" style="color: #343a40;">Registreren</h1>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
   

    <form method="post" class="p-4" style="border: 1px solid #ddd; border-radius: 8px; max-width: 500px; margin: 0 auto;">

        <div class="form-group mb-3">
            <label asp-for="newuser.Firstname" class="form-label"></label>
            <input asp-for="newuser.Firstname" class="form-control" placeholder="Vul je voornaam in" />
            <span asp-validation-for="newuser.Firstname" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="newuser.Lastname" class="form-label"></label>
            <input asp-for="newuser.Lastname" class="form-control" placeholder="Vul je achternaam in" />
            <span asp-validation-for="newuser.Lastname" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="newuser.Email" class="form-label"></label>
            <input asp-for="newuser.Email" class="form-control" placeholder="Vul je e-mailadres in" />
            <span asp-validation-for="newuser.Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="newuser.Password" class="form-label"></label>
            <input asp-for="newuser.Password" class="form-control" type="password" placeholder="Maak een wachtwoord aan" />
            <span asp-validation-for="newuser.Password" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-block">Registreer</button>
        </div>

        <p class="text-center mt-3">
            Heb je al een account?
            <a href="/Authentication/Login" class="text-decoration-none" style="color: lightblue;">Log in</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
